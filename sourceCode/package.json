{
  "name": "ubimp.api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/ubimp.api/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.4",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "^6.11.4",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^6.11.4",
    "@nestjs/platform-socket.io": "^6.11.4",
    "@nestjs/platform-ws": "^6.11.6",
    "@nestjs/schedule": "^0.2.0",
    "@nestjs/websockets": "^6.11.4",
    "@types/bcrypt": "^3.0.0",
    "@types/mongoose": "^5.7.21",
    "@types/ws": "^7.2.1",
    "bcrypt": "^4.0.1",
    "mongoose": "^5.9.15",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.1",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.1",
    "@nestjs/schematics": "^6.9.1",
    "@nestjs/testing": "^6.11.4",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.26",
    "@types/passport-jwt": "^3.0.3",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "@ubd/ubimp.domain/(.*)": "<rootDir>/libs/ubimp.domain/src/$1",
      "@ubd/ubimp.domain": "<rootDir>/libs/ubimp.domain/src",
      "@ubi/ubimp.infrastructure/(.*)": "<rootDir>/libs/ubimp.infrastructure/src/$1",
      "@ubi/ubimp.infrastructure": "<rootDir>/libs/ubimp.infrastructure/src",
      "uba/ubimp.application/(.*)": "<rootDir>/libs/ubimp.application/src/$1",
      "uba/ubimp.application": "<rootDir>/libs/ubimp.application/src"
    }
  }
}
